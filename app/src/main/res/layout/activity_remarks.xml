<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".remarks">

    <LinearLayout
        android:id="@+id/treatmentload"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:visibility="visible"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        >

        <LinearLayout
            android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal">
                <ImageButton
                    android:id="@+id/treatmentBack"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:background="@drawable/tras"

                    android:src="@drawable/back24"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="end"
                android:orientation="horizontal">
                <ImageButton
                    android:id="@+id/Add"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:background="@drawable/tras"
                    android:src="@drawable/add_box_24"/>
            </LinearLayout>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Treatments"
                android:textSize="18dp"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:textColor="@color/dark_blue"
                android:fontFamily="@font/poppins_semibold"
                android:textStyle="bold"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="10dp">

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginTop="2dp">


                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/recycleView"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        tools:listitem="@layout/treatmentitem"/>
                </LinearLayout>


            </ScrollView>

        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/TreatmentForm"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_gravity="center"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Add Treatments"
                    android:textSize="18dp"
                    android:textAlignment="viewStart"
                    android:layout_weight="1"
                    android:textColor="@color/dark_blue"
                    android:fontFamily="@font/poppins_semibold"
                    android:textStyle="bold"/>

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="end"
                android:orientation="horizontal">
                <ImageButton
                    android:id="@+id/Back"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:background="@drawable/tras"
                    android:src="@drawable/back24"/>
            </LinearLayout>
        </LinearLayout>



        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:orientation="vertical">


                <TextView
                    android:id="@+id/Diagnosis"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppins_semibold"
                    android:text="Insert Disease image you Treat "
                    android:textColor="@color/dark_blue"
                    android:textSize="18dp" />


                <ImageView
                    android:id="@+id/diagnosisImg"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:background="@drawable/card_border"
                    android:src="@drawable/addimg"/>


                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppins_semibold"
                    android:textStyle="bold"
                    android:textColor="@color/dark_blue"
                    android:textSize="18dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:text="Remarks" />

                <EditText
                    android:id="@+id/Remarks"
                    android:layout_width="match_parent"
                    android:layout_height="350dp"
                    android:layout_marginBottom="10dp"
                    android:background="@drawable/card_border"
                    android:ems="10"
                    android:fontFamily="@font/poppinsmedium"
                    android:hint="Type your text here"
                    android:paddingStart="20dp"
                    android:gravity="top|start"
                    android:scrollbars="vertical"
                    android:lines="10"
                    android:paddingTop="10dp"
                    android:overScrollMode="always"
                    android:textColor="@color/dark_blue"
                    android:textSize="14dp"
                    android:inputType="textMultiLine" />

                <TextView
                    android:id="@+id/textView3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppins_semibold"
                    android:textStyle="bold"
                    android:textColor="@color/dark_blue"
                    android:textSize="18dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:text="Treatment" />

                <EditText
                    android:id="@+id/treatment"
                    android:layout_width="match_parent"
                    android:layout_height="350dp"
                    android:layout_marginBottom="10dp"
                    android:background="@drawable/card_border"
                    android:ems="10"
                    android:fontFamily="@font/poppinsmedium"
                    android:hint="Type your text here"
                    android:paddingStart="20dp"
                    android:gravity="top|start"
                    android:scrollbars="vertical"
                    android:lines="10"
                    android:paddingTop="10dp"
                    android:overScrollMode="always"
                    android:textColor="@color/dark_blue"
                    android:textSize="14dp"
                    android:inputType="textMultiLine" />

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/treatmentAdd"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:layout_gravity="center"
                    android:text="Add"
                    android:textSize="14dp"
                    android:background="@drawable/button1"
                    android:textStyle="bold"
                    android:textColor="@color/white"
                    android:fontFamily="@font/poppinsbold"
                    android:layout_marginBottom="60dp"
                    />

            </LinearLayout>
        </ScrollView>

    </LinearLayout>


    <androidx.core.widget.ContentLoadingProgressBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/progressBar"
        android:elevation="10dp"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:visibility="gone"
        style="?android:attr/progressBarStyleLarge"
        />



</RelativeLayout>