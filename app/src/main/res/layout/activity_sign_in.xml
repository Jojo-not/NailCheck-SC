<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackground"
    tools:context=".sign_in">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imageView6"
            android:layout_marginTop="80dp"
            android:layout_width="200dp"
            android:layout_height="150dp"
            android:scaleType="centerCrop"
            android:layout_gravity="center"
            android:background="@drawable/tras"
            app:srcCompat="@drawable/brandv2" />

        <TextView
            android:id="@+id/lb_Sign_Up"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp"
            android:fontFamily="@font/poppinsbold"
            android:text="Sign Up"
            android:textColor="@color/blue"
            android:textSize="22dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/lb"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp"
            android:fontFamily="@font/poppins_regular"
            android:text="Create an account to continue"
            android:textSize="14dp"
            app:layout_constraintTop_toBottomOf="@+id/lb_Sign_Up"
            tools:layout_editor_absoluteX="41dp" />

        <LinearLayout
            android:id="@+id/linearLayout3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp"
            android:layout_marginTop="0dp"
            android:layout_marginEnd="30dp"
            android:orientation="vertical">


            <TextView
                android:id="@+id/lb_user_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:fontFamily="@font/poppinsbold"
                android:text="Name"
                android:textColor="@color/blue"
                android:textSize="18dp"
                android:textStyle="bold"
                app:layout_constraintTop_toBottomOf="@+id/lb" />

            <EditText
                android:id="@+id/user_name"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:background="@drawable/input_text_color"
                android:drawableStart="@drawable/user_icon"
                android:drawablePadding="10dp"
                android:ems="16"
                android:hint="Full Name"
                android:inputType="text"
                android:paddingStart="10dp"
                android:textColor="@color/black"
                android:textColorHint="@color/black"
                android:textSize="14dp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearLayout5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp"
            android:layout_marginTop="0dp"
            android:layout_marginEnd="30dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/lb_email"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:fontFamily="@font/poppinsbold"
                android:text="Email Address"
                android:textColor="@color/blue"
                android:textSize="18dp"
                android:textStyle="bold"
                app:layout_constraintDimensionRatio="1.1"
                app:layout_constraintTop_toBottomOf="@+id/user_name"
                tools:layout_editor_absoluteX="41dp" />

            <EditText
                android:id="@+id/email"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:background="@drawable/input_text_color"
                android:drawableStart="@drawable/email"
                android:drawablePadding="10dp"
                android:ems="15"
                android:hint="Enter your Email Address"
                android:inputType="textEmailAddress"
                android:paddingLeft="10dp"
                android:textColor="@color/black"
                android:textColorHint="@color/black"
                android:textSize="14dp"
                app:layout_constraintDimensionRatio="1.1"
                app:layout_constraintTop_toBottomOf="@+id/lb_email"
                tools:layout_editor_absoluteX="41dp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearLayout6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp"
            android:layout_marginTop="0dp"
            android:layout_marginEnd="30dp"
            android:orientation="vertical">


            <TextView
                android:id="@+id/lb_password"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:fontFamily="@font/poppinsbold"
                android:text="Password"
                android:textColor="@color/blue"
                android:textSize="18dp"
                android:textStyle="bold"
                app:layout_constraintDimensionRatio="1.1"
                app:layout_constraintTop_toBottomOf="@+id/email"
                tools:layout_editor_absoluteX="41dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/input_text_color"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/password"
                    android:layout_width="290dp"
                    android:layout_height="48dp"
                    android:background="@color/traspa"
                    android:drawableStart="@drawable/lock"
                    android:drawablePadding="10dp"
                    android:ems="15"
                    android:hint="Enter your Password"
                    android:inputType="textPassword"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:textColor="@color/black"
                    android:textColorHint="@color/black"
                    android:textSize="14dp" />

                <ImageButton
                    android:id="@+id/hidePasswordButton"
                    android:layout_width="50dp"
                    android:layout_height="48dp"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:background="@drawable/tras"
                    android:contentDescription="seepassword"
                    app:srcCompat="@drawable/hide" />
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearLayout7"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp"
            android:layout_marginTop="0dp"
            android:orientation="horizontal">

            <CheckBox
                android:id="@+id/check_terms"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checked="false"
                android:fontFamily="@font/poppins_regular"
                android:text="Agree with"
                android:textColor="@color/black"
                android:textSize="15dp" />

            <TextView
                android:id="@+id/txt_terms_condition"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_regular"
                android:text="Terms &amp; Condition"
                android:textColor="@color/blue"
                android:textSize="14dp"
                android:textStyle="bold" />
        </LinearLayout>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_sign_up"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginStart="30dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="30dp"
            android:background="@drawable/button1"
            android:enabled="false"
            android:fontFamily="@font/poppinsbold"
            android:text="Sign Up"
            android:textColor="@color/white"
            android:textSize="14dp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/linearLayout4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/lbe"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppins_regular"
                    android:text="Already have an account?"
                    android:textSize="16dp" />

                <TextView
                    android:id="@+id/txt_sign_in"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="1dp"
                    android:fontFamily="@font/poppins_regular"
                    android:text="Sign In"
                    android:textColor="@color/blue"
                    android:textSize="14dp"
                    android:textStyle="bold" />
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>

    <ScrollView
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:layout_marginTop="100dp"
        android:id="@+id/terms_box"
        android:layout_width="match_parent"
        android:layout_height="700dp"
        android:background="@drawable/shape1"
        android:elevation="10dp"
        android:padding="20dp"
        android:visibility="gone"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <Button
                android:id="@+id/cancel"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_gravity="end"
                android:background="@drawable/close_24"
                android:contentDescription="cancel" />

            <TextView
                android:id="@+id/h1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppinsbold"
                android:gravity="center"
                android:text="Terms and Condition"
                android:textColor="@color/black"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/p1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:fontFamily="@font/poppins_regular"
                android:justificationMode="inter_word"
                android:text="These terms and conditions  govern your use of the NailCheck mobile application:"
                android:textColor="@color/black"
                android:textSize="14dp" />

            <TextView
                android:id="@+id/p2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:fontFamily="@font/poppins_semibold"
                android:text="1. Scope of Service"
                android:textColor="@color/black"
                android:textSize="14dp" />

            <TextView
                android:id="@+id/p3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="fill"
                android:layout_marginTop="20dp"
                android:fontFamily="@font/poppins_regular"
                android:justificationMode="inter_word"
                android:text="1.1. The Appliaction is designed to aid in the detection of fingernail abnormalities by analyzing color and texture using Convolutional Neural Network (CNN) Algorithm Image Processing."
                android:textColor="@color/black"
                android:textSize="14dp" />

            <TextView
                android:id="@+id/p4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:fontFamily="@font/poppins_regular"
                android:justificationMode="inter_word"
                android:text="1.2. The Application is intended for informational purposes only and is not a substitute for professional medical advice, diagnosis, or treatment. Always seek the advice of your physician or other qualified health provider with any questions you may have regarding a medical condition."
                android:textColor="@color/black"
                android:textSize="14dp" />
            <TextView
                android:id="@+id/p5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:fontFamily="@font/poppins_regular"
                android:justificationMode="inter_word"
                android:text="1.3. By using our application, you acknowledge and agree that it is designed specifically to detect the following nail conditions: Chloronychia, Healthy Nails,Median Nail Dystrophy, Melanonychia,Subungual Hematoma, Subungual Melanoma. The application does not analyze or detect any other nail disorders."
                android:textColor="@color/black"
                android:textSize="14dp" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_agree"
                android:layout_width="250dp"
                android:layout_height="48dp"
                android:layout_gravity="center"
                android:layout_marginBottom="30dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/button1"
                android:fontFamily="@font/poppins_semibold"
                android:text="Agree"
                android:textColor="@color/white" />
        </LinearLayout>
    </ScrollView>


</RelativeLayout>