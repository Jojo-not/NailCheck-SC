<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:background="@color/dark_blue"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".camera">



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="visible"
        android:id="@+id/layout"
        android:orientation = "vertical">
        <ImageButton
            android:layout_width="48dp"
            android:layout_height="40dp"
            android:src="@drawable/back3"
            android:id="@+id/backButton"
            android:layout_marginTop="5dp"
            android:layout_marginStart="5dp"
            android:background="@color/traspa"/>

        <androidx.camera.view.PreviewView
            android:id="@+id/view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="20dp"
            android:layout_weight="1"></androidx.camera.view.PreviewView>

        <androidx.cardview.widget.CardView
            android:id="@+id/cardbtn"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:layout_below="@+id/view"
            app:cardBackgroundColor="@color/dark_blue">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_marginTop="30dp"
                android:orientation="horizontal">

                <ImageButton
                android:id="@+id/gallerybtn"
                android:layout_width="58dp"
                android:layout_height="58dp"
                android:contentDescription="gallery button"
                android:background="@drawable/tras"
                android:layout_gravity="center"
                app:srcCompat="@drawable/gallery" />


            <ImageButton
                android:id="@+id/camerabtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginEnd="60dp"
                android:layout_marginStart="60dp"
                android:contentDescription="camera button"
                android:background="@drawable/tras"
                app:srcCompat="@drawable/camera" />

            <ImageButton
                android:id="@+id/aboutbtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/mark"
                android:contentDescription="about button"
                android:background="@drawable/tras"
                android:layout_gravity="center"/>



            </LinearLayout>
        </androidx.cardview.widget.CardView>

    </LinearLayout>

    <com.example.scan.box
        android:id="@+id/box_overlay"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="0dp"/>

    <androidx.cardview.widget.CardView
        android:id="@+id/abouttxt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="@color/dark_blue"
        android:visibility="gone"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="50dp"
        android:layout_marginTop="30dp"
        app:cardElevation="10dp"
        app:cardCornerRadius="16dp"
        >

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/imageView4"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_marginTop="30dp"
                    android:layout_gravity="center"
                    app:srcCompat="@drawable/frame" />

                <TextView
                    android:id="@+id/textView3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:textSize="30dp"
                    android:textStyle="bold"
                    android:textAlignment="center"
                    android:fontFamily="@font/poppinsbold"
                    android:text="Snap Tips" />

                <TextView
                    android:id="@+id/snap1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppins_regular"
                    android:text="@string/snap_tips1"
                    android:textColor="@color/white"
                    android:textSize="16dp"
                    android:textStyle="normal"
                    android:padding="16dp"
                    android:justificationMode="inter_word"
                    android:lineSpacingExtra="4dp"
                    android:layout_margin="8dp"
                    android:ellipsize="end"
                    android:maxLines="5"/>
                <TextView
                    android:id="@+id/snap2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppins_regular"
                    android:text="@string/snap_tips2"
                    android:textColor="@color/white"
                    android:textSize="16dp"
                    android:padding="16dp"
                    android:textStyle="normal"
                    android:justificationMode="inter_word"
                    android:lineSpacingExtra="4dp"
                    android:layout_margin="8dp"
                    android:ellipsize="end"
                    android:maxLines="5"/>
                <TextView
                    android:id="@+id/snap3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppins_regular"
                    android:text="@string/snap_tips3"
                    android:textColor="@color/white"
                    android:textSize="16dp"
                    android:padding="16dp"
                    android:textStyle="normal"
                    android:justificationMode="inter_word"
                    android:lineSpacingExtra="4dp"
                    android:layout_margin="8dp"
                    android:ellipsize="end"
                    android:maxLines="5"/>

                <TextView
                    android:id="@+id/snap4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppins_regular"
                    android:text="@string/snap_tips4"
                    android:textColor="@color/white"
                    android:textSize="16dp"
                    android:padding="16dp"
                    android:justificationMode="inter_word"
                    android:lineSpacingExtra="4dp"
                    android:textStyle="normal"
                    android:layout_margin="8dp"
                    android:ellipsize="end"
                    android:maxLines="11"/>

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/button_back"
                    android:layout_width="200dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center"
                    android:textSize="18dp"
                    android:layout_marginBottom="30dp"
                    android:fontFamily="@font/poppinsbold"
                    android:background="@drawable/shape1"
                    android:textColor="@color/dark_blue"
                    android:text="Got it" />


            </LinearLayout>


        </ScrollView>

    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:id="@+id/resul"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >


    <ImageView
        android:id="@+id/view_result"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:contentDescription="result"
        android:scaleType="centerCrop"
        android:layout_weight="2"
        tools:srcCompat="@tools:sample/backgrounds/scenic" />

    <androidx.cardview.widget.CardView
        android:id="@+id/cardrs"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="3.5"
        app:cardBackgroundColor="@color/dark_blue" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:orientation="vertical">

            <androidx.cardview.widget.CardView
                app:cardBackgroundColor="@color/white"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                app:cardCornerRadius="16dp"
                android:layout_marginTop="30dp"
                android:layout_marginEnd="40dp"
                android:layout_marginStart="40dp">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:orientation="horizontal">

                    <ImageButton
                        android:id="@+id/btn_to_camera"
                        android:background="@drawable/tras"
                        android:layout_marginTop="5dp"
                        android:layout_marginStart="20dp"
                        android:contentDescription="back"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        app:srcCompat="@drawable/back2" />

                    <TextView
                        android:id="@+id/Save"
                        android:textColor="@color/blue"
                        android:fontFamily="@font/poppins_semibold"
                        android:textSize="26dp"
                        android:gravity="center"
                        android:textStyle="bold"
                        android:layout_marginStart="20dp"
                        android:layout_marginEnd="100dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Result" />
                </LinearLayout>

                <TextView
                    android:layout_gravity="center"
                    android:fontFamily="@font/poppinsbold"
                    android:textColor="@color/dark_blue"
                    android:textSize="18dp"
                    android:id="@+id/result"
                    android:textStyle="normal"
                    android:textAlignment="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="TextView" />

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                app:cardBackgroundColor="@color/white"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                app:cardCornerRadius="16dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="20dp"
                android:layout_marginStart="20dp"
                android:layout_marginBottom="50dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:gravity="center">

                <androidx.appcompat.widget.AppCompatButton
                    android:layout_gravity="center"
                    android:id="@+id/btn_save"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Save"
                    android:layout_weight="1"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="20dp"
                    android:textColor="@color/white"
                    android:textSize="14dp"
                    android:textStyle="normal"
                    android:fontFamily="@font/poppinsbold"
                    android:background="@drawable/puti"/>

                <androidx.appcompat.widget.AppCompatButton
                    android:layout_gravity="center"
                    android:id="@+id/medical_history_button"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Medical History"
                    android:textColor="@color/white"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="20dp"
                    android:textSize="14dp"
                    android:textStyle="normal"
                    android:fontFamily="@font/poppinsbold"
                    android:background="@drawable/puti"/>

                </LinearLayout>
            </androidx.cardview.widget.CardView>

        </LinearLayout>
    </androidx.cardview.widget.CardView>

    </LinearLayout>


</RelativeLayout>